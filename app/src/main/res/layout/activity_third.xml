<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ThirdActivity">

    <ImageView
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="8dp"
        android:paddingVertical="12dp"
        android:layout_marginStart="12dp"
        android:src="@drawable/ic_outline_west"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:letterSpacing="-0.020"
        android:paddingHorizontal="4dp"
        android:paddingVertical="12dp"
        android:text="Booking ID : 44123331"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_marginEnd="4dp"
        app:layout_constraintBottom_toBottomOf="@id/back"
        app:layout_constraintEnd_toStartOf="@id/copy"
        app:layout_constraintTop_toTopOf="@id/back" />

    <ImageView
        android:id="@+id/copy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/back"
        app:layout_constraintBottom_toBottomOf="@id/back"
        android:src="@drawable/ic_copy"
        />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/back"
        app:layout_constraintBottom_toBottomOf="parent"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_marginHorizontal="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/mazda3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mazda 3"
                android:textColor="@color/black"
                android:textSize="38dp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />

            <TextView
                android:id="@+id/sms1000z"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/mazda3"
                android:text="SMS1000Z/"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="16dp"
                />

            <TextView
                android:id="@+id/confirmed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                app:layout_constraintStart_toEndOf="@id/sms1000z"
                app:layout_constraintTop_toTopOf="@id/sms1000z"
                app:layout_constraintBottom_toBottomOf="@id/sms1000z"
                android:paddingVertical="2dp"
                android:paddingHorizontal="2dp"
                android:text="confirmed"
                android:textColor="@color/white"
                android:textSize="12dp"
                android:textStyle="bold"
                android:background="@drawable/rounded_corner"
                android:backgroundTint="@color/bright_blue"
                />

            <TextView
                android:id="@+id/start_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start date"
                android:textColor="@color/gray_400"
                android:textSize="12dp"
                android:textStyle="bold"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@id/sms1000z"
                app:layout_constraintStart_toStartOf="parent"
                />

            <TextView
                android:id="@+id/mon_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mon, 1 Nov 20"
                android:textColor="@color/black"
                android:textSize="14dp"
                app:layout_constraintTop_toBottomOf="@id/start_date"
                app:layout_constraintStart_toStartOf="parent"
                />

            <TextView
                android:id="@+id/time_1145"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="11:45 am"
                android:textColor="@color/black"
                android:textSize="14dp"
                app:layout_constraintTop_toBottomOf="@id/mon_date"
                app:layout_constraintStart_toStartOf="parent"
                />

            <TextView
                android:id="@+id/end_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="End date"
                android:textColor="@color/gray_400"
                android:textSize="12dp"
                android:textStyle="bold"
                android:layout_marginTop="12dp"
                android:layout_marginStart="64dp"
                app:layout_constraintTop_toBottomOf="@id/sms1000z"
                app:layout_constraintStart_toEndOf="@id/start_date"
                />

            <TextView
                android:id="@+id/tue_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tue, 2 Nov 4"
                android:textColor="@color/black"
                android:textSize="14dp"
                app:layout_constraintTop_toBottomOf="@id/end_date"
                app:layout_constraintStart_toStartOf="@id/end_date"
                />

            <TextView
                android:id="@+id/time_11452"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="11:45 am"
                android:textColor="@color/black"
                android:textSize="14dp"
                app:layout_constraintTop_toBottomOf="@id/tue_date"
                app:layout_constraintStart_toStartOf="@id/tue_date"
                />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_corner"
                android:backgroundTint="@color/blue"
                android:paddingHorizontal="24dp"
                app:layout_constraintBottom_toBottomOf="@id/time_11452"
                app:layout_constraintStart_toEndOf="@id/tue_date"
                app:layout_constraintEnd_toEndOf="parent"
                >

                <TextView
                    android:id="@+id/duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:text="Duration"
                    android:textColor="@color/gray_400"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    />

                <TextView
                    android:id="@+id/duration_0200"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/duration"
                    android:text="02  :  00"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    />

                <TextView
                    android:id="@+id/days_hours"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="@id/duration_0200"
                    app:layout_constraintEnd_toEndOf="@id/duration_0200"
                    app:layout_constraintTop_toBottomOf="@id/duration_0200"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:paddingBottom="8dp"
                    android:text="day          hours"
                    android:textColor="@color/white"
                    android:textSize="10dp"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>


            <TextView
                android:id="@+id/add_to_calendar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/time_1145"
                app:layout_constraintEnd_toEndOf="@id/guideline"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:textAlignment="center"
                android:layout_marginEnd="12dp"
                android:text="Add to calendar"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:textStyle="bold"
                android:paddingHorizontal="14dp"
                android:paddingVertical="6dp"
                android:drawableStart="@android:drawable/ic_input_add"
                android:background="@drawable/rounded_corner_with_black_border"
                />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.5" />

            <TextView
                android:id="@+id/extend"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/guideline"
                app:layout_constraintTop_toBottomOf="@id/time_1145"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="16dp"
                android:textAlignment="center"
                android:gravity="center"
                android:layout_marginStart ="12dp"
                android:paddingStart="32dp"
                android:paddingEnd="32dp"
                android:text="Extend"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:textStyle="bold"
                android:paddingHorizontal="14dp"
                android:paddingVertical="6dp"
                android:drawableStart="@drawable/ic_circle_clock"
                android:background="@drawable/rounded_corner_with_black_border"
                />

            <ImageView
                android:id="@+id/car"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@id/add_to_calendar"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:src="@drawable/get_go_car"
                />

            <TextView
                android:id="@+id/pick_up_car_at"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pick up car at"
                android:textColor="@color/pink"
                android:textStyle="bold"
                android:textSize="14dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="12dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/car"
                />

            <ImageView
                android:id="@+id/map_sample"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_marginTop="12dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="@id/guideline2"
                app:layout_constraintTop_toBottomOf="@id/pick_up_car_at"
                android:src="@drawable/map_snap"
                />

            <TextView
                android:id="@+id/description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/guideline2"
                app:layout_constraintTop_toBottomOf="@id/pick_up_car_at"
                android:text="194 Punggol Road P100\nMulti Storey Car Park"
                android:textColor="@color/black"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/small_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/guideline2"
                app:layout_constraintTop_toBottomOf="@id/description"
                android:text="Level 4 / Lot 123 - 456"
                android:textColor="@color/black"
                />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_corner_with_black_border"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="@id/guideline2"
                app:layout_constraintEnd_toEndOf="@id/description"
                app:layout_constraintTop_toBottomOf="@id/small_desc"
                >
                <ImageView
                    android:id="@+id/dark_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_dark_right_arrow"
                    app:layout_constraintTop_toTopOf="@id/get_directions"
                    app:layout_constraintBottom_toBottomOf="@id/get_directions"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.4"
                    />
                <TextView
                    android:id="@+id/get_directions"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="20dp"
                    android:textAlignment="textEnd"
                    android:text="Get Directions"
                    android:textColor="@color/black"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.35" />

            <View
                android:id="@+id/divider2"
                android:layout_width="0dp"
                android:layout_height="6dp"
                android:background="@color/gray_400"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@id/map_sample"
                />

            <TextView
                android:id="@+id/estimate_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/divider2"
                android:layout_marginTop="24dp"
                android:text="Estimated total"
                android:textColor="@color/black"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/amounts_is_not_final"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/estimate_total"
                android:text="*Amount is not final"
                android:letterSpacing="-0.05"
                android:textColor="@color/gray_400"
                />

            <ImageView
                android:id="@+id/left_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow_forward_black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/estimate_total"
                app:layout_constraintBottom_toBottomOf="@id/amounts_is_not_final"
                />

            <TextView
                android:id="@+id/dollar_52"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toStartOf="@id/left_arrow"
                app:layout_constraintTop_toTopOf="@id/left_arrow"
                app:layout_constraintBottom_toBottomOf="@id/left_arrow"
                android:text="S$52.00"
                android:textColor="@color/black"
                android:textStyle="bold"
                />

            <View
                android:id="@+id/divider3"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/gray_400"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@id/amounts_is_not_final"
                />

            <TextView
                android:id="@+id/need_help"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/divider3"
                android:layout_marginTop="16dp"
                android:text="Need help?"
                android:textColor="@color/black"
                android:textStyle="bold"
                />

            <ImageView
                android:id="@+id/four_line_pokemon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/need_help"
                android:src="@drawable/ic_four_line_pokemon"
                />

            <View
                android:id="@+id/divider4"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/gray_400"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@id/need_help"
                />

            <TextView
                android:id="@+id/cancel_this_booking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/divider4"
                android:layout_marginTop="16dp"
                android:text="Cancel this booking"
                android:textColor="@color/black"
                android:textStyle="bold"
                />

            <ImageView
                android:id="@+id/restrict_sign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/cancel_this_booking"
                android:src="@drawable/ic_restrict_sign"
                />

            <View
                android:id="@+id/divider5"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/gray_400"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@id/cancel_this_booking"
                android:layout_marginBottom="2dp"
                app:layout_constraintBottom_toBottomOf="parent"
                />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>