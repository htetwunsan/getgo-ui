<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue"
        android:paddingTop="12dp">

        <TextView
            android:id="@+id/plus_300"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="300+"
            android:letterSpacing="-0.020"
            android:textColor="@color/pink"
            android:textSize="16dp"
            android:layout_marginStart="24dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:id="@+id/cars_found"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="cars_found"
            android:letterSpacing="-0.020"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:layout_marginStart="4dp"
            app:layout_constraintStart_toEndOf="@id/plus_300"
            app:layout_constraintTop_toTopOf="@id/plus_300"
            app:layout_constraintBottom_toBottomOf="@id/plus_300"
            />

        <TextView
            android:id="@+id/filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Filter"
            android:background="@drawable/rounded_corner"
            android:backgroundTint="@color/white"
            android:textSize="12dp"
            android:paddingVertical="4dp"
            android:paddingHorizontal="12dp"
            android:letterSpacing="-0.05"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="@id/cars_found"
            app:layout_constraintEnd_toStartOf="@id/map"
            app:layout_constraintBottom_toBottomOf="@id/cars_found"
            />

        <TextView
            android:id="@+id/map"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Map"
            android:background="@drawable/rounded_corner"
            android:backgroundTint="@color/white"
            android:textSize="12dp"
            android:paddingVertical="4dp"
            android:paddingHorizontal="12dp"
            android:letterSpacing="-0.05"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginEnd="12dp"
            app:layout_constraintTop_toTopOf="@id/cars_found"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/cars_found"
            />

        <include
            android:id="@+id/view_item1"
            layout="@layout/view_item"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/plus_300"
            />

        <include
            android:id="@+id/view_item2"
            layout="@layout/view_item"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view_item1"
            />

        <include
            android:id="@+id/view_item3"
            layout="@layout/view_item"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view_item2"
            />

        <include
            android:id="@+id/view_item4"
            layout="@layout/view_item"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view_item3"
            />

        <include
            android:id="@+id/view_item5"
            layout="@layout/view_item"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view_item4"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>