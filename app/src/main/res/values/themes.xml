<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.UIPrototype" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/pink</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <!-- Customize your theme here. -->
        <!--        <item name="android:textViewStyle">@style/quicksandTextViewStyle</item>-->
        <!--        <item name="android:buttonStyle">@style/quicksandButtonStyle</item>-->
    </style>

    <style name="quicksandTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/quicksand</item>
    </style>

    <style name="quicksandButtonStyle" parent="android:Widget.Holo.Button">
        <item name="android:fontFamily">@font/quicksand</item>
    </style>

    <style name="Theme.UIPrototype.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.UIPrototype.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.UIPrototype.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>